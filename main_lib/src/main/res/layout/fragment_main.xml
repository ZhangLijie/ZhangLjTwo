<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.zxc.zhanglj.common.widget.MainTabView
        android:id="@+id/main_bottom_bar"
        android:layout_width="match_parent"
        android:layout_height="49dp"
        android:layout_alignParentBottom="true"/>

    <FrameLayout
        android:id="@+id/main_fragment_idss"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/main_bottom_bar" />

    <ImageView
        android:id="@+id/main_tab_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="49dp"
        android:background="@color/main_tab_line_color_press"
        android:visibility="visible"/>

    <com.zxc.zhanglj.common.widget.MainTabItemView
        android:id="@+id/tab_yao"
        android:layout_width="100dp"
        android:layout_height="68dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:visibility="gone"
        >
        <ImageView
            android:id="@+id/tab_play_tv"
            android:layout_width="68dp"
            android:layout_height="68dp"
            android:scaleType="fitCenter"
            android:layout_centerHorizontal="true"
            android:src="@drawable/bottom_tab_item_yao_selector"/>

    </com.zxc.zhanglj.common.widget.MainTabItemView>
</RelativeLayout>